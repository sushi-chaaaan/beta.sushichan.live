---
import { tv } from "tailwind-variants";
export type CaptionProps = {
  caption?: string;
  isFigure?: boolean;
};

type Props = CaptionProps;

const { caption = null, isFigure = false } = Astro.props;
const CaptionTag = isFigure ? "figcaption" : "span";

const styles = tv({
  slots: {
    caption: "inline-block justify-center text-center text-base",
    root: "flex w-full flex-col items-center gap-1 [&>*]:w-full",
  },
})();
---

<div class:list={styles.root()}>
  <slot />
  {
    caption != null && (
      <CaptionTag class:list={styles.caption()}>{caption}</CaptionTag>
    )
  }
</div>
