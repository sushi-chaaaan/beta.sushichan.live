---
import Link from "../../../../components/element/Link.astro";

type Props = {
  tag: string;
};

const { tag } = Astro.props;
---

<Link
  class:list="text-zinc-500 dark:text-zinc-400"
  href={`/blog/tag/${tag}`}
  title={`タグ「${tag}」がついた記事を見る`}
  variants={{ hoverColor: "neutral" }}
>
  <span class="badge badge-outline border-zinc-400 dark:border-zinc-600">
    {`#${tag}`}</span
  >
</Link>
