---
import type { Experience } from "@/pages/portfolio/data"

import BudouX from "@/components/common/BudouX.astro"

type Props = {
  experience: Experience
}

const {
  experience: { description, time, title },
} = Astro.props
const timeLeft = time.range ? time.data.from : time.data
const timeRight = time.range ? time.data.to : null
---

<li class="group mb-8 ms-4 last:mb-4">
  <div
    aria-hidden="true"
    class="absolute -start-1.5 mt-[9px] size-3 rounded-full bg-blue-600 dark:bg-blue-400"
  >
  </div>
  <span
    class="mb-1 text-sm font-normal leading-none text-blue-600 dark:text-blue-400"
  >
    <time datetime={timeLeft.attr}>
      {timeLeft.label}
    </time>
    {time.range && <span>-</span>}
    {
      timeRight && <time datetime={timeRight.attr}>{timeRight.label}</time>
    }</span
  >
  <h3 class="mb-1 text-lg font-semibold text-gray-800 dark:text-white">
    <BudouX>{title}</BudouX>
  </h3>
  <p class="mb-2 text-base font-normal text-gray-600 dark:text-gray-400">
    <BudouX>{description}</BudouX>
  </p>
  <slot />
</li>
