---
import ContentLayout from "@/components/common/ContentLayout.astro"
import Icon from "@/components/common/Icon.astro"
import Footer from "@/components/layout/Footer.astro"
import Header from "@/components/layout/Header.astro"
import BaseHead from "@/components/meta/BaseHead.astro"
import BaseSEO from "@/components/meta/BaseSEO.astro"
import LinkButton from "@/components/ui/button/LinkButton.astro"

export const prerender = true
---

<html lang="ja">
  <head>
    <BaseHead />
    <BaseSEO description="Page not found" title="Not Found" />
  </head>
  <body>
    <Header />
    <main class="flex">
      <ContentLayout class="flex flex-1 items-center">
        <div class="flex w-full flex-col flex-nowrap items-center gap-y-48">
          <div class="flex w-full flex-col flex-nowrap items-center gap-y-4">
            <div
              aria-label="404 Not Found"
              aria-level="1"
              class="flex flex-row items-center gap-x-2 text-8xl font-bold"
              role="heading"
            >
              <span>4</span>
              <Icon icon="fa6-regular:face-sad-tear" size="7xl" />
              <span>4</span>
            </div>
            <span class="text-center text-5xl font-bold">Not Found</span>
          </div>
          <LinkButton href="/">ホームへ戻る</LinkButton>
        </div>
      </ContentLayout>
    </main>
    <Footer />
  </body>
</html>
