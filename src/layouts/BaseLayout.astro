---
import type { Props as HeadProps } from "@/features/meta/BaseHead.astro"

import Footer from "@/components/layout/Footer.astro"
import Header from "@/components/layout/Header.astro"
import BaseHead from "@/features/meta/BaseHead.astro"

type Props = HeadProps

const SEO_IS_SET_PROPERLY = Astro.slots.has("seo")

const props = Astro.props
---

<html lang="ja">
  <head>
    <BaseHead {...props} />
    <slot name="seo" />
  </head>
  <body>
    <Header />
    <main>
      {
        import.meta.env.DEV && !SEO_IS_SET_PROPERLY && (
          <div class="text-center text-3xl font-bold text-red-500">
            <p>SEO is not set properly.</p>
            <p>
              Please set SEO component to <code>seo</code> slot.
            </p>
          </div>
        )
      }
      <slot />
    </main>
    <Footer />
  </body>
</html>
