---
import { declareLet } from "@/utils/declareLet";
import { Image as AstroImage, type RemoteImageProps } from "astro:assets";

const MAX_WIDTH = 840;

type Props = {
  priority?: boolean;
} & RemoteImageProps;

const {
  alt = "image alt",
  height,
  priority = false,
  src,
  width,
  ...props
} = Astro.props;

const size = declareLet(() => {
  let w = Number(width);
  let h = Number(height);

  if (w > MAX_WIDTH) {
    h *= MAX_WIDTH / w;
    w = MAX_WIDTH;
  }
  return { height: h, width: w };
});
---

<AstroImage
  alt={alt}
  height={size.height}
  sizes="(max-width: 768px) 100vw, 50vw"
  src={src}
  width={size.width}
  {...priority && { fetchpriority: "high" }}
  {...props}
/>
