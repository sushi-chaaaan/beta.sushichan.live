---
import { SEO } from "astro-seo"

interface Props {
  title: string
  description: string
  disableTitleTemplate?: boolean
}

const { title, description, disableTitleTemplate = false } = Astro.props

const titleDefault = disableTitleTemplate ? undefined : "すしのへや"
const titleTemplate = disableTitleTemplate ? undefined : "%s - すしのへや"

const DefaultOGPUrl = new URL("/images/ogp.png", Astro.url)
---

<SEO
  openGraph={{
    basic: {
      title: title,
      type: "website",
      image: DefaultOGPUrl.toString(),
      url: Astro.url,
    },
    image: {
      url: DefaultOGPUrl,
      width: 1200,
      height: 630,
      alt: "すしのへや",
    },
    optional: {
      description: description,
      locale: "ja_JP",
    },
  }}
  twitter={{
    card: "summary_large_image",
    title: title,
    description: description,
    image: DefaultOGPUrl,
  }}
  description={description}
  title={title}
  titleDefault={titleDefault}
  titleTemplate={titleTemplate}
/>
