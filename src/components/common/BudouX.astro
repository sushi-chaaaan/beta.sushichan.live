---
import s from "@/components/common/budoux.module.scss"
import SafeHTML from "@/components/utils/SafeHTML.astro"
import { applyBudouXToHTML } from "@/utils/html"

const html = await Astro.slots.render("default")
---

<SafeHTML
  afterSanitize={(html) => applyBudouXToHTML(html)}
  as="Fragment"
  class:list={s.root}
  rawHTML={html}
  __dangerouslyDisableSanitizer
/>
