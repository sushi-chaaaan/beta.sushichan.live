---
import type { AstroProps } from "@/utils/@types/jsxProps"
import type { HTMLTag } from "astro/types"

import s from "@/components/common/content-layout.module.scss"

type Props<T extends HTMLTag> = {
  asElement?: T
  class?: string
  props?: AstroProps<T>
}

const { asElement, class: className, ...props } = Astro.props
const Component = asElement ?? "div"
---

<Component class:list={[s.root, className && className]} {...props}>
  <slot />
</Component>
