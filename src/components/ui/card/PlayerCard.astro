---
import type { CardProps } from "../../common/Card.astro";

import Card from "../../common/Card.astro";
import UrlPlayer from "../UrlPlayer.astro";

interface Props extends CardProps {
  muted?: boolean;
  url: string;
}
const { muted, round = true, shadow = true, url, ...props } = Astro.props;
---

<Card round={round} shadow={shadow} {...props}>
  <UrlPlayer muted={muted} url={url} />
</Card>
