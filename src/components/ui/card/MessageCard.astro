---
import Card, { type CardProps } from "@/components/common/Card.astro"
import Message, {
  type Props as MessageProps,
} from "@/components/ui/Message.astro"

type Props = CardProps & MessageProps

const { type, ...props } = Astro.props
---

<Card {...props}>
  <Message type={type}>
    <slot />
  </Message>
</Card>
