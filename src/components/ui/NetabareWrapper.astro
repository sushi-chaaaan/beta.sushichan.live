---
import NetabareAlert from "@/components/ui/NetabareAlert.astro"

type Props = {
  netabareList?: string[]
  backIfNewTab?: string
}

const { netabareList, backIfNewTab } = Astro.props

const includeNetabare = netabareList && netabareList.length > 0
---

{
  includeNetabare ? (
    <NetabareAlert backIfNewTab={backIfNewTab} netabareList={netabareList}>
      <slot />
    </NetabareAlert>
  ) : (
    <slot />
  )
}
