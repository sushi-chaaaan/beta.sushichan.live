---
import BudouX from "@/components/common/BudouX.astro"

interface Props {
  title?: string
}

const { title } = Astro.props
---

{/*eslint-disable astro/jsx-a11y/no-noninteractive-tabindex */}

<div
  class="collapse collapse-arrow border border-zinc-300 bg-zinc-200 p-4 dark:border-zinc-800/60 dark:bg-zinc-700/60"
  tabindex={0}
>
  <input aria-label="focus or click to see content" type="checkbox" />
  <div class="collapse-title text-xl font-medium">
    {title ? <BudouX>{title}</BudouX> : <slot name="title" />}
  </div>
  <div class="collapse-content">
    <slot />
  </div>
</div>
