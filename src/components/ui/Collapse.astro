---
import BudouX from "@/components/common/BudouX.astro"

interface Props {
  title?: string
}

const { title } = Astro.props
---

<details
  class="collapse collapse-arrow border border-zinc-300 bg-zinc-200 p-2 duration-700 dark:border-zinc-800/60 dark:bg-zinc-700/60"
>
  <summary class="collapse-title text-xl font-medium">
    {title ? <BudouX>{title}</BudouX> : <slot name="title" />}
  </summary>
  <div class="collapse-content">
    <slot />
  </div>
</details>
