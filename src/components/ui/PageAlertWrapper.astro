---
import PageAlert from "@/components/ui/PageAlert.astro"

type Props = {
  backIfNewTab?: string
}

const { backIfNewTab } = Astro.props

const includeNetabare = Astro.slots.has("alert")
---

{/* pass alert modal content as <div slot="alert" /> */}
{
  includeNetabare ? (
    <PageAlert backIfNewTab={backIfNewTab}>
      <slot name="alert" slot="alert-content" />
      <slot />
    </PageAlert>
  ) : (
    <slot />
  )
}
