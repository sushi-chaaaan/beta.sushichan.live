{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"],
      "@root/*": ["./*"]
    },
    "types": ["vitest/globals"],
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  },

  "exclude": ["node_modules", "dist", "public"]
}
